<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HomeActivity">

    <!-- ðŸ” Thanh tÃ¬m kiáº¿m -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_search"
        android:paddingHorizontal="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:contentDescription="Search Icon"
            app:tint="#888888" />

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Search products..."
            android:paddingStart="8dp"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- ðŸŸ¦ 4 nÃºt danh má»¥c -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnCategoryAll"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="All"
            android:backgroundTint="#FF6B35"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnCategoryChairs"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Chairs"
            android:backgroundTint="#EEEEEE"
            android:textColor="#000000"
            android:layout_marginEnd="8dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnCategoryTables"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Tables"
            android:backgroundTint="#EEEEEE"
            android:textColor="#000000"
            android:layout_marginEnd="8dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnCategorySofas"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Sofas"
            android:backgroundTint="#EEEEEE"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- ðŸ“‹ RecyclerView thay tháº¿ ListView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_product_card" />

</LinearLayout>